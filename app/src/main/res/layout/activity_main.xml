<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IHM.MainActivity">


    <com.facebook.login.widget.LoginButton
        xmlns:facebook="http://schemas.android.com/apk/res-auto"
        facebook:com_facebook_login_text="Connexion Facebook"
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="535dp"
        android:paddingTop="15dp"
        android:paddingLeft="5dip"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_connexion_google"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="592dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="Connexion Google"
        android:background="@drawable/borders"
        android:drawableLeft="@drawable/icon"
        android:paddingLeft="5dip"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_ou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="444dp"
        android:text="Ou"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <EditText
        android:id="@+id/editText_email"
        android:layout_width="291dp"
        android:layout_height="55dp"
        android:layout_marginBottom="336dp"
        android:background="@drawable/edittextborders"
        android:gravity="center"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editText_mot_de_passe"
        android:layout_width="291dp"
        android:layout_height="55dp"
        android:layout_marginBottom="260dp"
        android:background="@drawable/edittextborders"
        android:gravity="center"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_connexion_simple"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/borders_button_email"
        android:text="Connexion par email"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_inscription"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:textColor="@android:color/white"
        android:background="@drawable/borders_button_inscription"
        android:text="Inscription"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_mdp_oublie"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:text="Mot de passe oubliÃ©"
        android:textColor="@android:color/white"
        android:background="@drawable/borders_button_mdp_oublie"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>